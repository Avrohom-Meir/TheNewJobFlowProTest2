{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@jobflow/db-master": ["../../db-master/dist/index.d.mts"],
      "@jobflow/db-tenant": ["../../db-tenant/dist/index.d.mts"]
    }
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}